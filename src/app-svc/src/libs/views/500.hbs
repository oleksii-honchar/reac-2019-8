            line-height: 1.14;
            margin: 0 0 30px;
            }
        .title:after {
            content: '.';
            font-family: none;
            color: #f05722;
            }
        @media (max-width: 600px) {
            .title {
                font-size: 26px;
                }
            }
        .content {
            margin: 30px 0;
            }
        .button {
            display: inline-block;
            border: 0 none;
            padding: 0 30px;
            margin: 30px 0 0;

            font-weight: normal;
            font-size: 18px;
            line-height: 60px;
            height: 60px;

            background: #f05722;
            color: #fff;

            text-transform: none;
            text-decoration: none;
            outline: none;

            cursor: pointer;
            -webkit-transition: all .3s;
            transition: all .3s;
            }

